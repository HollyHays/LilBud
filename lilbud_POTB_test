//note for holly: comm 8

#include <WiFi.h>
#include <HTTPClient.h>

const char* ssid = "iPhone (3)";
const char* password = "Albus1010$";
const char* SERVER = "http://172.20.10.9:5000";

const char* ME   = "lilbud_02";
const char* THEM = "lilbud_01";

String getInbox() {
  HTTPClient http;
  String url = String(SERVER) + "/inbox?device_id=" + ME;
  http.begin(url);
  int code = http.GET();
  String resp = http.getString();
  http.end();

  Serial.print("GET code=");
  Serial.print(code);
  Serial.print(" resp=");
  Serial.println(resp);
  return (code == 200) ? resp : "";
}

void sendAck() {
  HTTPClient http;
  http.begin(String(SERVER) + "/send");
  http.addHeader("Content-Type", "application/json");

  String body = String("{\"from_id\":\"") + ME +
                String("\",\"to_id\":\"") + THEM +
                String("\",\"message\":\"ACK\"}");

  int code = http.POST(body);
  String resp = http.getString();
  http.end();

  Serial.print("POST code=");
  Serial.print(code);
  Serial.print(" resp=");
  Serial.println(resp);
}

void setup() {
  Serial.begin(115200);
  delay(1500);
  Serial.println("BOOTING POT B");

  WiFi.begin(ssid, password);
  Serial.print("WiFi connecting");
  while (WiFi.status() != WL_CONNECTED) {
    delay(250);
    Serial.print(".");
  }
  Serial.println("\nWiFi ok");
}

void loop() {
  String inbox = getInbox();
//  if (inbox.length() == 0) {
//  delay(50);
//  inbox = getInbox();
//  }
  // Only respond if a real message exists
  if (inbox.indexOf("\"from_id\"") >= 0) {
    // Grab the last "PING X" we see in the JSON and ACK it
    int idx = inbox.lastIndexOf("PING ");
    String ackMsg = "ACK";

    if (idx >= 0) {
      int start = idx + 5;                 // after "PING "
      int end = inbox.indexOf("\"", start); // next quote ends the number
      if (end > start) {
        ackMsg = "ACK " + inbox.substring(start, end);
      }
    }

    Serial.print("Sending: ");
    Serial.println(ackMsg);

    // sendAck but with custom message
    HTTPClient http;
    http.begin(String(SERVER) + "/send");
    http.addHeader("Content-Type", "application/json");

    String body = String("{\"from_id\":\"") + ME +
                  String("\",\"to_id\":\"") + THEM +
                  String("\",\"message\":\"") + ackMsg + String("\"}");

    int code = http.POST(body);
    String resp = http.getString();
    http.end();

    Serial.print("POST code=");
    Serial.print(code);
    Serial.print(" resp=");
    Serial.println(resp);
  }

  delay(1000);
}
